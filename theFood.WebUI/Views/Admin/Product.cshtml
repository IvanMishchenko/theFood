@model System.Collections.Generic.IEnumerable<theFood.Domain.DbModel.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>All Products</h1>
<table class="Grid">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th class="NumericCol">Price</th> 
    <th>Description</th>
    </tr> @foreach (var item in Model)
          {
              <tr>
                  <td>@item.Id</td>
                  <td>@Html.ActionLink(item.Name, "EditProduct", new { item.Id })</td>
                  <td class="NumericCol">@item.PriceOnProduct</td>
                  <td>@item.Description</td>
                
                  <td>
                       @using (Html.BeginForm("DeleteProduct", "Admin"))
                            {
                                @Html.Hidden("Id", item.Id)
                                <input type="submit" value="Delete"/>
                            }
                  </td>
              </tr>
       }
</table>

<p>@Html.ActionLink("Add a new product", "CreateProduct")</p> 
<p>@Html.ActionLink("Back", "Index","Admin")</p> 